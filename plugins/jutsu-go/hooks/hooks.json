{
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "go fmt ./...",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "go vet ./...",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "go test ./...",
            "timeout": 900
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "go fmt ./...",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
